<div class="section">
  <%= form_for @keyword do |f| %>
    <div class="field">
      <div class="control">
        <%= f.label :key %>
        <%= f.text_field :key, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.label :link %>
        <%= f.text_field :link, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>
    <%= f.submit :submit, class: "button is-primary"%>
  <% end %>
</div>