<% content_for :page_title, @keyword.key %>

<section class="section">
    <h1 class="title">
      <%= link_to @keyword.key, @keyword.link %>
    </h1>
          <strong>Actions</strong>
      <div class="level-right">
        <p class="level-item">
          <%= link_to "Edit", edit_keyword_path(@keyword), class: "button" %>
        </p>
        <p class="level-item">
          <%= link_to 'Delete', keyword_path(@keyword), method: :delete, data: { confirm: "Are you sure that you want to delete this keyword?" },
                      class: "button is-danger"%>
        </p>
      </div>
</section>