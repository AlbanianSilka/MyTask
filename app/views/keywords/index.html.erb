<% content_for :page_title, "Index" %>
<div class="card">
  <%= link_to 'Create new keyword', new_keyword_path %>
</div>
<section class="section">
  <div class="container">
    <% @keywords.each do |keyword| %>
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title is-4"> <%= link_to keyword.key, keyword %></p>
            </div>
          </div>
          <div class="content">
            <%= keyword.link %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>