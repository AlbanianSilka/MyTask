<div class="section">
  <%= form_for @post do |f| %>
    <div class="field">
      <div class="control">
        <%= f.label :title %>
        <%= f.text_field :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
      <div class="control">
        <%= f.label :swap_limit %>
        <%= f.number_field :swap_limit %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.label :content %>
        <%= f.rich_text_area :content, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>
    <%= f.submit :submit, class: "button is-primary"%>
  <% end %>
</div>