<% content_for :page_title, @post.title %>

<section class="section">
  <div class="container">
    <% if flash[:alert] %>
      <div class="alert"><%= flash[:alert] %></div>
    <% end %>
    <h1 class="title">
<%= @facade.title %>
    </h1>
    <nav class="level">
      <div class="level-left">
        <p class="level-item">
          <strong>Actions</strong>
        </p>
      </div>

      <div class="level-right">
        <p class="level-item">
          <%= link_to "Edit", edit_post_path(@post), class: "button" %>
        </p>
        <p class="level-item">
            <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure that you want to delete this question?" },
                        class: "button is-danger"%>
        </p>
        <p>
          <%= link_to 'Swap with keywords', post_swap_words_path(@post)%>
        </p>
        <p>
          <%= form_with(model: @post) do |f| %>
          <%= f.collection_select :key, Keyword.all, :id, :key %>
          <% end %>
        </p>
      </div>

    </nav>
    <hr />

    <div class="content">
      <%= @facade.description_with_link.html_safe %>
    </div>
  </div>
  <%= link_to 'Back', posts_path %>
</section>
